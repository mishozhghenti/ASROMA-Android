<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ge.moodme.asroma.About"
    tools:showIn="@layout/activity_about">


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%">

        <TextView
            android:id="@+id/first_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to ASROMA"
            android:textColor="#55099F"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_header"
            android:layout_centerHorizontal="true"
            android:text="Mood!"
            android:textColor="#55099F"
            android:textSize="24dp"
            android:textStyle="bold" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="7%">

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Smiles in Emotional Engagement."
            android:textColor="#9781ae"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_first"
            android:layout_centerHorizontal="true"
            android:text="Thanks for sending us your questions &amp;"
            android:textColor="#9781ae"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_second"
            android:layout_centerHorizontal="true"
            android:text="support requests:"
            android:textColor="#9781ae"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_third"
            android:layout_centerHorizontal="true"
            android:autoLink="email"
            android:text="support@mood-me.com"
            android:textSize="18dp" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="7%">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/version_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASROMa Mood version:"
                android:textColor="#9781ae"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="1.0"
                android:textColor="#9781ae"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout"
            android:layout_centerHorizontal="true"
            android:autoLink="web"
            android:text="http://www.mood-me.com"
            android:textSize="18dp" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/forth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="7%">

        <LinearLayout
            android:id="@+id/second_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I've read "
                android:textColor="#9781ae"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/terms_n_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and"
                android:textColor="#9781ae"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_linear_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and hereby accept full."
                android:textColor="#9781ae"
                android:textSize="18dp" />

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forth"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="10%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Mach-3D Sarl 2016"
            android:textColor="#9781ae"
            android:textSize="22dp"
            android:textStyle="italic" />
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
